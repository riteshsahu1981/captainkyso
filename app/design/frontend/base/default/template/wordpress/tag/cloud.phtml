<?php if ($tags = $this->getTags()): ?>
	<?php $tagCount = count($tags) ?>
	<div class="block block-blog block-blog-tag-cloud block-tags">
		<div class="block-title">
			<strong><span><?php echo $this->__('Blog Tags') ?></span></strong>
		</div>
		<div class="block-content">
			<ul class="tags-list">
				<?php foreach ($tags as $tag): ?>
					<li<?php if (--$tagCount < 1): ?> class="last"<?php endif; ?>><a href="<?php echo $tag->getUrl() ?>" style="font-size:<?php echo $this->getFontSize($tag) ?>%;"><?php echo $this->htmlEscape($tag->getName()) ?></a></li>
				<?php endforeach; ?>
			</ul>
		</div>
	</div>
<?php endif; ?>